{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "isolatedModules": true,
        "incremental": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "*.test.*",
        "src/**/*.test.ts",
        "node_modules",
    ]
}